.title
  font-size: 1.5em
  text-align: center
  text-transform: uppercase
  font-weight: 500
  margin: em(3) 0 em(2)

.item
  display: block
  cursor: pointer
  position: relative
  text-align: center
  margin-bottom: em(2)

  &:hover
    .image-wrapper
      &:before, &:after
        opacity: 1

    .overlay
      opacity: 1

.overlay
  position: absolute
  bottom: 20px
  left: 0
  width: 100%
  text-align: center
  color: $white
  opacity: 0
  transition: all .1s ease-out

  &:before
    content: ''
    display: inline-block
    vertical-align: middle
    background: url(modules/products/sprite-card.png) no-repeat
    margin-right: 5px

.image-wrapper
  position: relative

  &:before, &:after
    content: ''
    display: block
    position: absolute
    opacity: 0
    transition: all .1s ease-out

  &:before
    left: 0
    top: 0
    width: 100%
    height: 100%
    background: rgba(#36332a, .5)

  &:after
    border: 1px solid #fff
    left: 15px
    top: 15px
    right: 15px
    bottom: 15px

.image
  display: block
  width: 100%

.name
  margin-top: em(.5)

.subtitle
  font-size: 0.8em
  color: #aaaaa4